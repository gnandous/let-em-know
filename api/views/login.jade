extends layout
block content
  .container
    form.form-signin(role='form', action='/api/login', method='POST')
      h2.form-signin
        | Please Sign In
      if (messages.username || messages.password)
        div.alert.alert-danger.ltk-login(role='alert')
          span.sr-only Error:
          if (messages.username)
            .message.info
              span= messages.username
          if (messages.password)
            .message.info
              span= messages.password
      label.sr-only(for='inputEmail') Email address
      input#username.form-control(type='text', placeholder='pseudo', name='username')
      label.sr-only(for='inputPassword') Password
      input#password.form-control(type='password', placeholder='Password', name='password')
      br
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
