extends layout

block content
  .container
    form.form-signin(role='form', action='/login', method='POST')
      h2.form-signin
        | Please Sign In
      if (messages)
        div.alert.alert-danger.ltk-login(role='alert')
          each kw in messages
            .message.info
              span= kw.error
      label.sr-only(for='inputEmail') Email address
      if (fields)
        input#pseudo.form-control(type='text', placeholder='pseudo', name='pseudo' value=fields.pseudo)
      else
        input#pseudo.form-control(type='text', placeholder='pseudo', name='pseudo')
      label.sr-only(for='inputPassword') Password
      input#password.form-control(type='password', placeholder='Password', name='password')
      br
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
